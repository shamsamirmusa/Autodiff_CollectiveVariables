# Load the PythonCVInterface shared library
LOAD FILE=/Users/sss/Documents/EnergyGap_project/plumed2/plugins/pycv/PythonCVInterface.dylib

# Define the collective variables for x, y, and z coordinates of the center
cc_x: PYCVINTERFACE ATOMS=1,2,3 IMPORT=cc_colvar  CALCULATE=center_x
cc_y: PYCVINTERFACE ATOMS=1,2,3 IMPORT=cc_colvar  CALCULATE=center_y
cc_z: PYCVINTERFACE ATOMS=1,2,3 IMPORT=cc_colvar  CALCULATE=center_z

# Output the center of curvature coordinates to a file
PRINT ARG=cc_x,cc_y,cc_z FILE=cc_colvar.out STRIDE=1


